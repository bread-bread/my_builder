                    li.slider__item(class=`${(item[0] == 1) ? 'active' : ''}`)
                        .slider__left
                            img.slider__preview-img(src=`./assets/img/content/slider_${item[0]}.png`)
                        .slider__right
                            .slider__right-wrap
                                .slider__title
                                    .block-subtitle.block-subtitle_lineHeight #{item[1]}
                                .slider__tech #{item[2]}
                                a(class="slider__link" href=`${item[3]}` target="_blank")
                                    span.slider__link-icon-wrap
                                        svg.slider__link-icon
                                            use(xlink:href="./assets/img/icons/sprite.svg#link")
