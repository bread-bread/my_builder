mixin skills(title, skills)
  li.skills-circle__item
    .skills-row
      .skills-row__title #{title}
      ul.skills-row__list
        each skill in skills
          li.skills-row__item
            .skill
              svg.circles
                circle(r="45" cx="50%" cy="50%" fill="none" class="circle__first")
                circle(r="45" cx="50%" cy="50%"  transform="rotate(-90 55 55)" class="circle__second circle-55")
              .skill__title #{skill}